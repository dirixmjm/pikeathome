<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv=\"refresh\" content=\"1\" />
<title>DomoWeb</title>
<link rel="stylesheet" type="text/css" href="index.css" />
<if variable="form.write">
   <write name="&form.module;.&form.name;.state" value="&form.write;" />
</if>

</head>

<body>
<div class="content">
 <div class="menu" ><include file="menu.dml" /></div>
 <div class="head"><a href="/sensor.dml?name=&form.name;&amp;module=&form.module;">&form.name;</a></div>
 <div class="main"><table class="maincenter" >
    <tr><th>Variable</th><th>Value</th></tr>
    <emit source="sensor" name="&form.module;.&form.name;"  new=""  ><tr>
    <td>&_.index;</td>
    <td>&_.value;</td>
    </emit>
 </table>
 <if variable="form.module = PlugWise" >
 <rrdgraph name="&form.name;" graph="--vertical-label WH DEF:kWH=/media/log/&form.name;.rrd:power:AVERAGE CDEF:WH=kWH,1000,* LINE2:WH#FF0000" />
       <rrdgraph name="&form.name;" filename="&form.name_Month.png" graph="--start 1304114400 --step 86400 --vertical-label kWH DEF:kWH=/media/log/&form.name;.rrd:power:AVERAGE CDEF:WH=kWH,24,* LINE2:WH#FF0000" />
 
 </if>
 <if variable="form.module = OWFS" >
 <if variable="form.name = WoonkamerTemp">
 <rrdgraph name="&form.name;" graph="DEF:kWH=/media/log/&form.name;.rrd:temperature:AVERAGE LINE2:kWH#FF0000" />
 </if>
 <if variable="form.name = BadkamerTemp">
 <rrdgraph name="&form.name;" graph="DEF:kWH=/media/log/&form.name;.rrd:temperature:AVERAGE LINE2:kWH#FF0000" />
 </if>
 <if variable="form.name = Zonneboiler">
 <h3>Boiler Temperatuur</h3>
 <rrdgraph name="&form.name;" graph="DEF:kWH=/media/log/&form.name;.rrd:boiler:AVERAGE LINE2:kWH#FF0000" /><br />
 <h3>Collector Temperatuur</h3>
 <rrdgraph name="&form.name;" filename="Zonneboiler_collector" graph="DEF:kWH=/media/log/&form.name;.rrd:collector:AVERAGE LINE2:kWH#FF0000" />
 <h3>Pomp toerental</h3>
 <rrdgraph name="&form.name;" filename="Zonneboiler_pump" graph="DEF:kWH=/media/log/&form.name;.rrd:pump:AVERAGE LINE2:kWH#FF0000" />
 </if>
 </if>
</div>
</div>
</body>
</html>
